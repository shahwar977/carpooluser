<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity"
        android:background="@drawable/ic_login_background"

>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/login_otp"
            android:textSize="@dimen/text_heading"
            android:textColor="@color/textColor"
            android:id="@+id/tv_login_heading"
            android:layout_marginTop="216.3dp"
    />


    <com.chaos.view.PinView
            android:id="@+id/pinview"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="23.2dp"
            android:inputType="number"
            android:lineHeight="2dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:lineColor="@android:color/black"
            app:lineWidth="2dp"
            app:viewType="line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_heading"

    />

  <!--  <Chronometer
            android:id="@+id/simpleChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pinview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />-->

    <Button android:layout_width="256.05dp"
            android:layout_height="39.24dp"
            app:layout_constraintTop_toBottomOf="@+id/pinview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="94.3dp"
            android:text="@string/login_done"
            android:background="@drawable/ic_button_login"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/btn_pinview_done"
            app:layout_constraintHorizontal_bias="0.496"/>






</androidx.constraintlayout.widget.ConstraintLayout>