<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:paddingBottom="14dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rider_rating_profile"
            android:id="@+id/imageView2" android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Rider Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="4dp"
            android:layout_marginBottom="6dp"/>
    <TextView
            android:text="KMA-567 Alto White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView6" android:fontFamily="@font/segoe_ui"
            android:textSize="10sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            android:layout_marginTop="7dp" android:textColor="@color/light_grey_text_color"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rating_star_big"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView5" android:layout_marginStart="4dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rating_star_big"
            android:id="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView3" android:layout_marginStart="4dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rating_star_big"
            android:id="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10" android:layout_marginStart="4dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rating_star_big"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView9" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView9" android:layout_marginStart="4dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rating_star_big"
            android:id="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="34dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent" android:background="@color/delete_dialog_button_color_grey"
            android:textAlignment="textStart" android:gravity="start"
            android:hint="@string/rider_rating_dialog_text_1" android:paddingStart="8dp" android:paddingTop="4dp"
            android:paddingEnd="8dp"/>
    <Button
            android:text="@string/rider_rating_dialog_text_2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/rating_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/black"
            android:textColor="@android:color/white" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp" android:fontFamily="@font/segoe_ui"/>
</androidx.constraintlayout.widget.ConstraintLayout>