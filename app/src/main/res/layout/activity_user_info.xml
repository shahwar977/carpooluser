<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity"
        android:background="@drawable/ic_login_background"

>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/login_username"
            android:textSize="@dimen/text_heading"
            android:textColor="@color/textColor"
            android:id="@+id/tv_login_heading"
            android:layout_marginTop="216dp"
    />


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_profile_login"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="27dp"
               android:id="@+id/imgv_phone_login"
               android:layout_marginTop="30dp"
               app:layout_constraintTop_toBottomOf="@+id/tv_login_heading"

    />


    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/imgv_phone_login"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="26.6dp"
              android:inputType="text"
              app:layout_constraintTop_toTopOf="@+id/imgv_phone_login"
              android:id="@+id/editText_username_login"
              android:maxLength="11"



    />

    <Button android:layout_width="256.05dp"
            android:layout_height="39.24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_username_login"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="51.4dp"
            android:layout_marginTop="93.5dp"
            android:text="@string/login_done"
            android:background="@drawable/ic_button_login"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/btn_done_userinfo"



    />






</androidx.constraintlayout.widget.ConstraintLayout>