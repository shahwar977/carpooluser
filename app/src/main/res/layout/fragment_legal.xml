<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"

>

    <include
            layout="@layout/toolbar_app"
            android:id="@+id/toolbar_legal"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_term_condition"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/toolbar_legal"
              android:text="@string/text_terms_condition"
              android:textSize="@dimen/text_heading"
              android:textColor="@color/textColor"
              android:layout_marginTop="14dp"
              android:layout_marginStart="10dp"

    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_privacy_policy"
              app:layout_constraintStart_toStartOf="@id/tv_term_condition"
              app:layout_constraintTop_toBottomOf="@id/tv_term_condition"
              android:text="@string/text_privacy_policy"
              android:textSize="@dimen/text_heading"
              android:textColor="@color/textColor"
              android:layout_marginTop="8dp"

    />

</androidx.constraintlayout.widget.ConstraintLayout>